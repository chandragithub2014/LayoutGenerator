<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/horvertheader">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:id="@+id/totalpanel">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="60"
        android:text="Total  Widget Weight"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="100"
        android:layout_weight="40"
        android:id="@+id/totalweight"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:id="@+id/Availablepanel">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:text=" Available Widget Weight"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_weight="40"
            android:id="@+id/availableweight"/>
    </LinearLayout>

</LinearLayout>